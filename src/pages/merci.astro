---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section class="merci-section">
    <h1 class="merci-section_title">Merci pour votre message !</h1>
    <p class="merci-section_p">
      Votre formulaire a bien été envoyé. <br /> Je vous répondrai dans les meilleurs
      délais.
    </p>
    <a href="/" class="retour-btn">Retour à l'accueil</a>
  </section>
</BaseLayout>

<style>
  .merci-section {
    max-width: 700px;
    height: 60vh;
    margin: 0 auto;
    text-align: center;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
  }
  .merci-section_title {
    font-size: var(--text-3xl);
    color: var(--gray-0);
    margin-bottom: 1rem;
  }
  .merci-section_p {
    font-size: var(--text-lg);
    color: var(--text-regular);
    margin-bottom: 2rem;
  }
  .retour-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--accent-regular);
    color: white;
    text-decoration: none;
    border-radius: 999rem;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease;
  }
  .retour-btn:hover {
    background-color: var(--accent-light);
    transform: scale(1.05);
  }
  @media (max-width: 768px) {
    .merci-section {
      padding: 1rem;
    }
    .merci-section_title {
      font-size: 1.5rem;
    }
    .merci-section_p {
      font-size: 1rem;
    }
    .retour-btn {
      padding: 0.5rem 1rem;
    }
  }
</style>
